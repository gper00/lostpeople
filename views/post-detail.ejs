<!-- Page content-->
<div class="container-md col-lg-9 col-xxl-8 mt-4">
    <div class="row">
        <!-- Side widget 1 -->
        <div class="col-lg-2 align-items-center d-none d-lg-block share">
            <div class="position-sticky" style="top: 35%">
                <div class="large-3 my-3">
                    <a
                        class="share-link twitter-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-twitter"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link linkedin-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-linkedin"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link facebook-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-facebook"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link whatsapp-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-whatsapp"></i
                    ></a>
                </div>
                <div class="large-3 my-3">
                    <a
                        class="share-link telegram-lg text-body-secondary p-2"
                        href="#"
                        target="_blank"
                        ><i class="bi bi-telegram"></i
                    ></a>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="col-lg-8 p-0-lg">
            <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb" class="small-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/" class="breadcrumb-link nav-link d-inline">Home</a>
                    </li>
                    <% if (post.category) { %>
                    <li class="breadcrumb-item">
                        <a href="/?category=<%= post.category.toLowerCase() %>" class="breadcrumb-link nav-link d-inline"><%= capitalizeEachWord(post.category) %></a>
                    </li>
                    <% } %>
                    <li class="breadcrumb-item active" aria-current="page">
                      <span class="d-none d-md-inline"><%= post.title %></span>
                    </li>
                </ol>
            </nav>

            <main>
                <article class="bg-white rounded-4 border">
                    <header class="mt-4 mt-lg-5 px-3 px-md-4 px-lg-5">
                        <h1 class="post-title">
                            <%= post.title %>
                        </h1>

                        <div class="d-flex align-items-center mt-3 mb-2 mb-lg-0 pb-3 border-bottom">
                            <div class="flex-shrink-0">
                                <img
                                    <% if (post.userId.image) { %>
                                    src="<%= post.userId.image%>"
                                    <% } else { %>
                                    src="/assets/img/user-default.jpg" alt=""
                                    <% } %>
                                    class="rounded-circle author-post-thumbnail"
                                    itemprop="image"
                                    alt="Foto profil <%= post.userId.fullname %>"
                                    loading="lazy"
                                />
                                <figcaption class="d-none"><%= post.title %></figcaption>
                            </div>
                            <div class="ms-3">
                                <h6 class="medium m-0" itemprop="author">
                                    <%= post.userId.fullname %>
                                </h6>
                                <p class="small-8 m-0">
                                    <time datetime="<%= post.createdAt.toLocaleDateString('en-CA') %>">
                                        <!-- <i class="bi bi-calendar3"></i> -->
                                        <%= post.createdAt.toLocaleDateString('en-EN', { month: 'short', day: 'numeric', year: '2-digit'}) %>
                                    </time>
                                    <% if (post.category) { %>
                                    <span class="fw-bold mx-1">&centerdot;</span>
                                    <span itemprop="articleSection">
                                        <a href="/?category=<%= post.category.toLowerCase() %>"class="text-decoration-none text-reset">
                                            <!-- <i class="bi bi-folder"></i> -->
                                            <%= capitalizeEachWord(post.category)%>
                                        </a>
                                    </span>
                                    <% } %>
                                </p>
                            </div>
                        </div>

                        <% if (post.tags.length) { %>
                        <div class="tags small-4 mb-lg-2 mt-3">
                            <!-- <i class="bi bi-tags"></i> -->
                            <!-- <span class="me-2"></span> -->
                            <% post.tags.forEach(tag => { %>
                            <a
                                href="/?tag=<%= tag %>"
                                class="tag-link badge bg-body-secondary text-body-secondary text-decoration-none rounded-4 px-3 py-2 my-1"
                                rel="tag"
                                >#<%= tag %>
                            </a>
                            <% }) %>
                        </div>
                        <% } %>
                    </header>

                    <% if (post.thumbnail) { %>
                    <figure class=" mt-3 mt-lg-4 px-3 px-md-4 px-lg-5">
                        <img
                            class="post-thumbnail rounded-4"
                            src="<%= post.thumbnail %>"
                            alt="<%= post.title %>"
                            loading="lazy"
                        />
                    </figure>
                    <% } %>
                    <div class="card-body px-3 px-md-4 px-lg-5 pb-4 pb-lg-5 mt-4">
                        <section class="post-body markdown-body">
                            <%- post.content %>
                        </section>
                    </div>
                    <div class="d-lg-none card-footer px-3 px-md-4 px-lg-5 pb-4 pb-lg-5 mt-4">
                      <section class="d-flex justify-content-between border-top pt-4">
                        <span>Share</span>
                        <span>

                          <a
                                class="share-link facebook-sm text-body-secondary p-2"
                                href="#"
                                ><i class="bi bi-facebook"></i
                            ></a>
                            <a
                                class="share-link linkedin-sm text-body-secondary p-2"
                                href="#"
                                ><i class="bi bi-linkedin"></i
                            ></a>
                            <a
                                class="share-link twitter-sm text-body-secondary p-2"
                                href="#"
                                ><i class="bi bi-twitter"></i
                            ></a>
                            <a
                                class="share-link telegram-sm text-body-secondary p-2"
                                href="#"
                                ><i class="bi bi-telegram"></i
                            ></a>
                            <a
                                class="share-link whatsapp-sm text-body-secondary p-2"
                                href="#"
                                ><i class="bi bi-whatsapp"></i
                            ></a>
                        </span>
                      </section>
                    </div>
                </article>

                <section id="comments" class="bg-white rounded-4 border p-lg-4 px-3 py-4 mt-5">
                    <script src="https://giscus.app/client.js"
                        data-repo="gper00/blog-comments"
                        data-repo-id="R_kgDONr94rA"
                        data-category="General"
                        data-category-id="DIC_kwDONr94rM4CmIHN"
                        data-mapping="pathname"
                        data-strict="0"
                        data-reactions-enabled="1"
                        data-emit-metadata="0"
                        data-input-position="bottom"
                        data-theme="light"
                        data-lang="id"
                        crossorigin="anonymous"
                        async>
                    </script>
                </section>

                <!-- Pagination -->
                <!-- <div class="row mt-5">
                    <nav aria-label="Page navigation">
                        <ul
                            class="pagination justify-content-between align-items-center"
                        >
                            <li class="page-item">
                                <a
                                    class="text-dark text-decoration-none di p-0 border-0 post-pagination"
                                    href="#"
                                    >
                                    <i class="bi bi-arrow-left"></i>
                                    <span class="large-2">Prev post</span></a
                                >
                            </li>
                            <li class="page-item">
                                <a
                                    class="text-dark text-decoration-none di p-0 border-0 post-pagination"
                                    href="#"
                                    ><span class="large-2">Next post</span>
                                    <i class="bi bi-arrow-right"></i></a
                                >
                            </li>
                        </ul>
                    </nav>
                </div> -->

            </main>
        </div>
    </div>
</div>

<script>
    const postTitle = "<%= JSON.stringify(post.title) %>"
    const postUrl = "<%= JSON.stringify(locale.url) %>"
    const encodedTitle = encodeURIComponent(postTitle)
    const encodedUrl = encodeURIComponent(postUrl)

    const shareTargets = {
        twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
        linkedin: `https://www.linkedin.com/shareArticle?mini=true&url=${encodedUrl}&title=${encodedTitle}`,
        facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
        whatsapp: `https://api.whatsapp.com/send/?text=${encodedTitle}%20${encodedUrl}`,
        telegram: `https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}`
    };

    document.querySelectorAll('.share-link').forEach(link => {
        for (const service in shareTargets) {
            if (link.classList.contains(`${service}-lg`) || link.classList.contains(`${service}-sm`)) {
                link.setAttribute('href', shareTargets[service]);
            }
        }
    });
</script>

<script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "<%= post.title %>",
      "image": "<%= `${post.thumbnail}` %>",
      "author": {
        "@type": "Person",
        "name": "<%= post.userId.name %>"
      },
      "publisher": {
        "@type": "Organization",
        "name": "<%= locale.name %>",
        "logo": {
          "@type": "ImageObject",
          "url": "<%= locale.icon %>"
        }
      },
      "datePublished": "<%= post.createdAt.toISOString() %>",
      "dateModified": "<%= post.updatedAt ? post.updatedAt.toISOString() : post.createdAt.toISOString() %>",
      "description": "<%= post.excerpt %>",
      "mainEntityOfPage": "<%= locale.url %>/<%= post.slug %>"
    }
    </script>
