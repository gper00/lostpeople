<!-- Header Navigation -->
<header class="navbar navbar-expand-lg bg-body border-bottom sticky-top">
  <div class="container-md col-lg-10 col-xl-9 col-xxl-8">
      <!-- Brand Logo -->
      <a class="navbar-brand" href="/">
          <!-- <img src="<%= locale.icon %>" alt="<%= locale.name %>" width="28" height="28" class="me-2"> -->
          Lostpeople.
      </a>

      <!-- Mobile Menu Toggle -->
      <button
          class="navbar-toggler border-0 mx-0 px-0"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
      >
          <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navigation Menu -->
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                  <a class="nav-link text-body-secondary <%= pageActive === 'blog' ? 'active fw-semibold' : '' %>" href="/">
                      <i class="bi bi-house"></i> Home
                  </a>
              </li>
              <li class="nav-item">
                  <a class="nav-link text-body-secondary <%= pageActive === 'about' ? 'active fw-semibold' : '' %>" href="/about">
                      <i class="bi bi-person"></i> About
                  </a>
              </li>
              <!-- Theme Toggle -->
              <li class="nav-item">
                  <button
                      class="nav-link btn border-0 bg-transparent text-body-secondary"
                      type="button"
                      onclick="toggleTheme()"
                      aria-label="Toggle theme"
                  >
                      <i class="bi bi-sun-fill" id="theme-icon"></i>
                  </button>
              </li>
          </ul>
      </div>
  </div>
</header>
